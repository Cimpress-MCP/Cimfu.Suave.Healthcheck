# EditorConfig is awesome:
http://EditorConfig.org

# top-most EditorConfig file
root = true

[*.fs,*.fsi,*.fsx]
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2

# Default settings:
# A newline ending every file
# Use 4 spaces as indentation
[*]
insert_final_newline = true
indent_style = space
indent_size = 4
